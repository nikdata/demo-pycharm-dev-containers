# base image
FROM python:3.9-slim-bullseye

# update
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
    libglpk40 \
    htop \
    jq \
    libxtst6 \
    libxt6 \
    xdg-utils \
    nano \
    python3-pip \
    curl \
    tar \
    bzip2 \
    gcc \
    gfortran \
    wget \
    procps

# install python packages
COPY packages.txt packages.txt
RUN pip install -r packages.txt